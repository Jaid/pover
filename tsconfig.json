{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "outDir": "dist/typescript",
    "newLine": "lf",
    "declaration": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "lib/*": [
        "src/lib/*"
      ],
      "src/*": [
        "src/*"
      ],
      "root/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "src/tsd",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeAcquisition": {
    "enable": true
  }
}